{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/recommended",
    "@vue/airbnb"
  ],
  "rules": {
    "vue/max-attributes-per-line": ["error", {
      "singleline": 3,
      "multiline": {
        "max": 1,
        "allowFirstLine": false
      }
    }],
    "semi": ["error", "always"],
    "no-param-reassign": ["error", { "props": false }],
    "quotes": ["error", "single"],
    "comma-dangle": ["error", "only-multiline"],
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "no-shadow": "off",
    "linebreak-style": "off"
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}